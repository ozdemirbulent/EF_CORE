@model List<Order>
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/Layout/Index.cshtml";
}



<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Asenkron Sipariş Listesi</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Müşteri</th>
                                <th>Sipariş Adet</th>
                                <th>Birim Fiyat</th>
                                <th>Toplam Fiyat</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.OrderId</th>
                                    <td>@item.product.ProductName</td>
                                    <td>@item.customer.CustomerName  @item.customer.CustomerSurname</td>
                                    <td>@item.OrderCount</td>
                                    <td>@item.UnitPrice TL</td>
                                    <td>@item.TotalPrice TL</td>
                                    <td>@item.Status</td>

                                    <th>

                                        <a href="/Order/DeleteOrder/@item.OrderId" onclick="return confirm('Bu öğeyi silmek istediğinize emin misiniz?');" class="btn btn-outline-danger">Sil</a>
                                    </th>
                                    <th>
                                        <a href="/Order/UpdateOrder/@item.OrderId" class="btn btn-outline-warning">Güncelle</a>
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Order/CreateOrder/" class="btn btn-outline-success">Yeni Ürün Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>





