@model List<CustomerOrderViewModel>

@{
    ViewData["Title"] = "OrderListWithCustomerGroup";
    Layout = "~/Views/Layout/Index.cshtml";
}

<h2 class="mb-4 text-center">🧾 Müşteri Sipariş Grup Listesi</h2>

@foreach (var item in Model)
{
    <div class="card mb-4 shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <strong>@item.CustomerName @item.CustomerSurname</strong>
            <span class="badge bg-light text-dark">
                @(item.Orders != null ? item.Orders.Count() : 0) Sipariş
            </span>
        </div>
        <div class="card-body">
            @if (item.Orders != null && item.Orders.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var order in item.Orders)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Sipariş No: <strong>@order.OrderId</strong></span>
                            <span class="badge bg-success">Tamamlandı</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted fst-italic">❌ Bu müşterinin hiç siparişi yok.</p>
            }
        </div>
    </div>
}
