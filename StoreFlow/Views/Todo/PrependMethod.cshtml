@model List<string>
@{
    ViewData["Title"] = "PrependMethod";
    Layout = "~/Views/Layout/Index.cshtml";
    int counter = 0;
}


<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title header">Prepend Metot</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Açıklama</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                counter++;
                                <tr>
                                    <th>@counter</th>
                                    <td>@item</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                    <style>
                        .btn {
                            margin-right: 5px;
                        }

                        .rmt {
                            margin-top: 5px;
                            margin-bottom: 5px;
                            width: 100px;
                            font-weight: bold;
                            transition: background-color 0.3s, color 0.3s, transform 0.3s;
                        }

                            .rmt:hover {
                                transform: scale(1.05);
                            }

                            .rmt:active {
                                transform: scale(0.95);
                            }

                        .btn:last-child {
                            margin-right: 0;
                        }

                        .header {
                            margin-bottom: 20px;
                            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                            color: #333;
                            text-align: center;
                            font-weight: bold;
                            font-size: 24px;
                            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
                            transition: color 0.3s, transform 0.3s;
                        }

                            .header::after {
                                content: '';
                                display: block;
                                width: 50px;
                                height: 4px;
                                margin: 10px auto 0;
                                border-radius: 2px;
                            }

                            .header:hover {
                                color: #28a745;
                                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
                                transform: scale(1.25);
                            }


                        .table th, .table td {
                            vertical-align: middle;
                            text-align: center;
                        }

                        tr {
                            text-align: center;
                            vertical-align: middle;
                            font-family: Tahoma, Geneva, Verdana, sans-serif;
                            font-weight: bold;
                            color: #555;
                            transition: background-color 0.3s, color 0.3s;
                        }

                            tr:hover {
                                background-color: #f1f1f1;
                                color: #000;
                            }

                        .button {
                            color: white;
                            background-color: #28a745;
                            accent-color: #28a745;
                            font-size: 16px;
                            padding: 10px 20px;
                            border-radius: 5px;
                            text-align: center;
                            margin-bottom: 10px;
                            font-weight: bold;
                            transition: background-color 0.3s, color 0.3s, transform 0.3s;
                        }

                            .button:hover {
                                background-color: #218838;
                                color: white;
                                transform: scale(1.05);
                            }


                            .button:active {
                                background-color: #1e7e34;
                                transform: scale(0.95);
                            }

                    </style>
                </div>
            </div>
        </div>
    </div>
</div>



