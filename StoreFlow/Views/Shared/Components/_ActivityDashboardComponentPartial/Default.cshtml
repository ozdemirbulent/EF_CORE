@model List<Activity>

<div class="col-md-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body">
            <h5 class="card-title text-center mb-4">
                <i class="far fa-futbol me-2 text-danger"></i> Aktiviteler
            </h5>

            <ul class="list-unstyled mb-3">
                @foreach (var item in Model)
                {
                    <li class="mb-3 border-bottom pb-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">@item.Title</span>
                            <small class="text-muted">@item.ActivityTime</small>
                        </div>
                        <p class="text-muted small mb-0">@item.Description</p>
                    </li>
                }
            </ul>

            <div class="d-flex justify-content-center mt-3">
                <a class="activity-btn" href="/ToDo/InCompleteTask/">
                    <i class="fas fa-plus me-2"></i> Aktivite Sayfası
                </a>
            </div>
        </div>
    </div>
</div>

<style>
  
    .activity-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        background: linear-gradient(135deg, #dc3545, #ff5b6a);
        color: #fff;
        font-weight: 600;
        border-radius: 10px;
        padding: 10px 22px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 3px 8px rgba(220, 53, 69, 0.4);
        width: 80%;
    }

        .activity-btn:hover {
            background: linear-gradient(135deg, #bb2d3b, #ff445a);
            box-shadow: 0 6px 15px rgba(220, 53, 69, 0.6);
            transform: translateY(-2px);
            color: #fff;
        }

        .activity-btn:active {
            transform: scale(0.96);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3) inset;
        }

        .activity-btn i {
            font-size: 1rem;
        }


    li {
        transition: background-color 0.2s ease;
        border-radius: 6px;
        padding: 5px;
    }

        li:hover {
            background-color: #f8f9fa;
        }
</style>
