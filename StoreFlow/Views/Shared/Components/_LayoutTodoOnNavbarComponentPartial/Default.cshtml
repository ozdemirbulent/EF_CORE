@model List<Todo>

<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="fas fa-bell mx-0"></i>
        <span class="count">0</span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
        <a class="dropdown-item">
            <p class="mb-0 font-weight-normal float-left p">
                Toplam  @ViewBag.todoCount görev var.
            </p>
            <a href="/ToDo/InCompleteTask/" class="badge-outline-dark">
                <span class="badge badge-pill badge-warning float-right">Tümünü Gör</span>
            </a>
        </a>

        <div class="dropdown-divider"></div>
        @foreach (var item in Model)
        {
            <a class="dropdown-item preview-item">
                <div class="preview-thumbnail">
                    <div class="preview-icon bg-danger">
                        <i class="fas fa-exclamation-circle mx-0"></i>
                    </div>
                </div>
                <div class="preview-item-content">
                    <h6 class="preview-subject font-weight-medium">@item.Description</h6>
                    <p class="font-weight-light small-text">

                        @switch (item.Priority)
                        {
                            case "Birincil":
                                <span class="accordion-bordered btn btn-dark alert-fill-danger">@item.Priority</span>
                                break;

                            case "İkincil":
                                <span class="accordion-bordered btn btn-dark alert-fill-warning">@item.Priority</span>
                                break;

                            case "Üçüncül":
                                <span class="accordion-bordered btn btn-dark alert-fill-info">@item.Priority</span>
                                break;

                            case "Dördüncül":
                                <span class="accordion-bordered btn btn-dark alert-fill-success">@item.Priority</span>
                                break;

                            default:
                                <span class="accordion-bordered btn btn-dark alert-fill-secondary">@item.Priority</span>
                                break;
                        }
                    
                    </p>
                </div>
            </a>
            <div class="dropdown-divider"></div>

        }
        <style>
            .badge {
                margin: 5px;
                border-radius: 20px;
                color: #000;
                background-color: ghostwhite;
                transition: background-color 0.3s, color 0.3s, transform 0.3s;
                text-align: center;
                justify-content: center;
            }

                .badge:hover {
                    transform: scale(1.05);
                    background-color: aquamarine;
                    padding: 10px;
                }

            .p {
                font-family: 'Times New Roman', Times, serif;
                font-size: 20px;
                font-weight: bolder;
                color: black;
                transition: all 0.7s;
            }

                .p:hover {
                    transform: scale(1.05);
                    text-decoration: underline;
                    font-size: 20px;
                }
        </style>

    </div>
</li>