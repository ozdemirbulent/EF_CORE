@model List<Product>

@{
    ViewData["Title"] = "SkipFourProductList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">İlk 5 ürünü atla - Sonraki 5 ürünü ekrana getir</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Ürün Fiyatı</th>
                                <th>Kategori Adı</th>
                                <th>Stok Sayısı</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th>@count</th>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProductPrice</td>
                                    <td>@item.category.CategoryName</td>
                                    <td>@item.ProductStock</td>

                                    <th>
                                        <a href="/Product/DeleteProduct/@item.ProductId" onclick="return confirm('Bu öğeyi silmek istediğinize emin misiniz?');" class="btn btn-outline-danger">Sil</a>
                                    </th>
                                    <th>
                                        <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-outline-info">Güncelle</a>
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct/" class="btn btn-outline-success">Yeni Ürün Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
