@model List<ProductWithCategoryViewModel>
@{
    ViewData["Title"] = "CategoryWithByProducts";
    Layout = "~/Views/Layout/Index.cshtml";
    int sayac = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body">
                <h3 class="card-title text-center mb-4">📦 Ürün Listesi</h3>
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-borderless text-center">
                            <tr>
                                <th>#</th>
                                <th>Ürün Adı</th>
                                <th>Stok Sayısı</th>
                                <th>Kategori Adı</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @foreach (var item in Model)
                            {
                                sayac++;
                                <tr>
                                    <td><span class="badge bg-primary">@sayac</span></td>
                                    <td class="fw-bold">@item.ProductName</td>
                                    <td>
                                        @if (item.ProductStock > 50)
                                        {
                                            <span class="badge bg-success">@item.ProductStock</span>
                                        }
                                        else if (item.ProductStock > 10)
                                        {
                                            <span class="badge bg-warning text-dark">@item.ProductStock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@item.ProductStock</span>
                                        }
                                    </td>
                                    <td>@item.CategoryName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
