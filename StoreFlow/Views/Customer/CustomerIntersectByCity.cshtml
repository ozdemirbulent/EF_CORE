@model List<string>
@{
    ViewData["Title"] = "CustomerIntersectByCity";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card shadow-sm border-0 rounded-3 mt-4">
            <div class="card-header bg-gradient bg-primary text-white">
                <h4 class="mb-0" style="text-align:center"> Ankara & İstanbul Müşterileri</h4>
            </div>
            <div class="card-body p-3">
                <ul class="list-group">
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center mb-2 rounded shadow-sm hover-shadow">
                            <span>@item</span>
                            <span class="badge bg-primary rounded-pill"><i class="fab fa-umbrella-beach"></i></span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 4px 12px;
        transform: translateY(5px);
        transition: all 0.2s;
        background-color:aqua;
    }
</style>
