@model Customer

@{
    ViewData["Title"] = "Müşteri Güncelleme";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row-cols-6">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Müşteri Güncelleme</h3>

                <form asp-action="UpdateCustomer" method="post" class="forms-sample">
                    <input type="hidden" asp-for="CustomerId" />

                    <div class="form-group">
                        <label>Ad</label>
                        <input asp-for="CustomerName" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Soyad</label>
                        <input asp-for="CustomerSurname" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Şehir</label>
                        <input asp-for="CustomerCity" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>İlçe</label>
                        <input asp-for="CustomerDistrict" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label>Bakiye</label>
                        <input asp-for="CustomerBalance" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">
                        Müşteriyi Güncelle
                    </button>
                    <a href="/Customer/CustomerList/" class=" btn btn-warning">Geri Dön</a>          
                </form>
            </div>
        </div>
    </div>
</div>
