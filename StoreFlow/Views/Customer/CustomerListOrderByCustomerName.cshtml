@model List<Customer>

@{
    ViewData["Title"] = "CustomerListOrderByCustomerName";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Müşteri Listesi</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Müşteri Adı-Soyadı</th>
                                <th>Müşteri Şehir</th>
                                <th>Müşteri Bakiye </th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>

                                    <th>@count</th>
                                    <td>@item.CustomerName  @item.CustomerSurname</td>
                                    <td>@item.CustomerCity / @item.CustomerDistrict</td>
                                    <td>@item.CustomerBalance TL</td>

                                    <th>

                                        <a href="/Customer/DeleteCustomer/@item.CustomerId" onclick="return confirm('Bu Müşteriyi silmek istediğinize emin misiniz?');" class="btn btn-outline-danger">Sil</a>
                                    </th>
                                    <th>
                                        <a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-outline-warning">Güncelle</a>
                                    </th>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Customer/CreateCustomer/" class="btn btn-outline-success">Yeni Müşteri Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

