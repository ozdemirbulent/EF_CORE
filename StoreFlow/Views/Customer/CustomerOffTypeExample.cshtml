@{
    ViewData["Title"] = "CustomerOffTypeExample";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container my-5">
    <div class="text-center mb-5">
        <h3 class="fw-bold mb-3">Müşteri Listesi</h3>
        <p class="text-secondary">Kayıtlı müşterilerimizin detaylı bilgileri</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in ((IEnumerable<Object>)ViewBag.v1).OfType<Customer>())
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary bg-gradient rounded-circle d-flex align-items-center justify-content-center text-white me-3" style="width: 50px; height: 50px;">
                                <i class="bi bi-person-fill fs-4"></i>
                            </div>
                            <div>
                                <h5 class="card-title mb-0">@item.CustomerName @item.CustomerSurname</h5>
                                <small class="text-muted"><i class="bi bi-geo-alt me-1"></i>@item.CustomerCity</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0 pb-3 px-3">
                        <button class="btn btn-outline-primary btn-sm w-100" onclick="location.href='/Customer/CustomerList/'">Detaylar</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0W/font/bootstrap-icons.css">