@model List<Customer>
@{
    ViewData["Title"] = "CustomerListExceptCityIstanbul";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-header bg-gradient bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">🏙️ Müşteri Listesi (İstanbul Hariç)</h4>
                <span class="badge bg-light text-dark fw-bold">@Model.Count() müşteri</span>
            </div>
            <div class="card-body p-3">
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle text-center">
                        <thead class="table-dark">
                            <tr>
                                <th style="width:10%">#</th>
                                <th style="width:90%">Şehir Adı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td><span class="badge bg-secondary">@count</span></td>
                                    <td class="text-start">@item.CustomerCity</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
