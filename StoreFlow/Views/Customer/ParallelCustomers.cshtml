@model List<Customer>
@{
    ViewData["Title"] = "ParallelCustomers";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Müşteri Listesi Parallel Metodu</h3>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Ad-Soyad</th>
                                <th>Şehir / İlçe</th>
                                <th>Bakiye</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.CustomerName @item.CustomerSurname</td>
                                    <td>@item.CustomerCity / @item.CustomerDistrict</td>
                                    <td>@item.CustomerBalance TL</td>
                                    <td>
                                        <a href="/Customer/DeleteCustomer/@item.CustomerId" onclick="return confirm('Bu Müşteriyi silmek istediğinize emin misiniz?');" class="btn btn-outline-danger">Sil</a>
                                    </td>
                                    <td>
                                        <a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-outline-warning btn-sm">
                                            Güncelle
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <br />
                <a href="/Customer/CreateCustomer/" class="btn btn-outline-success mt-2">Yeni Müşteri Girişi</a>
            </div>
        </div>
    </div>
</div>


